<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Blogs</title>
    <style>
        /* Base Styles */
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 20px;
        }

        h1 {
            text-align: center;
            color: #333;
            margin-bottom: 40px;
            font-size: 2.5em;
            letter-spacing: 2px;
            text-transform: uppercase;
        }

        /* Post Container */
        .post-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
            gap: 20px;
        }

        /* Post Styles */
        .post {
            background: linear-gradient(135deg, #fdfbfb 0%, #ebedee 100%);
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15);
            padding: 20px;
            max-width: 300px;
            text-align: center;
            word-wrap: break-word;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            transition: transform 0.3s, box-shadow 0.3s;
        }

        /* Image Styling */
        .post img {
            max-width: 100%;
            height: auto;
            border-radius: 8px;
            margin-bottom: 15px;
            transition: transform 0.3s;
        }

        .post img:hover {
            transform: scale(1.05);
        }

        /* Text Styles */
        .post h2 {
            font-size: 1.5em;
            margin: 10px 0;
            color: #333;
            letter-spacing: 1px;
            font-weight: bold;
        }

        .post p {
            color: #666;
            margin-bottom: 15px;
            max-height: 120px;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .post small {
            display: block;
            margin-top: 10px;
            color: #999;
        }

        /* Button Styling */
        .btn-group {
            display: flex;
            justify-content: space-between;
        }

        .btn {
            background-color: #333;
            color: #fff;
            padding: 8px 15px;
            border-radius: 6px;
            border: none;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .btn:hover {
            background-color: #555;
        }

        .btn-edit {
            background-color: #4CAF50; /* Edit Button */
        }

        .btn-delete {
            background-color: #f44336; /* Delete Button */
        }

        /* Hover Effect on Post */
        .post:hover {
            transform: translateY(-8px);
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.2);
        }
    </style>
</head>
<body>

    <h1>My Blogs</h1>

    <div class="post-container">
        <% if (posts.length > 0) { %>
            <% posts.forEach(function(post) { %>
                <div class="post">
                    <h2><%= post.title %></h2>
                    <img src="<%= post.image %>" alt="<%= post.title %>">
                    <p><%= post.about %></p>
                    <p><%= post.content %></p>
                    <small>Posted on: <%= post.date %></small>

                    <!-- Button group for Edit and Delete -->
                     <!-- Inside the blog post loop -->
                     <div class="btn-group">
                        <form action="/delete-post/<%= post.id %>" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this post?');">
                            <button type="submit" class="btn btn-delete">Delete</button>
                        </form>
                        <a href="/edit/<%= post.id %>" class="btn btn-edit">Edit</a>
                    </div>
                    

                </div>
            <% }); %>
        <% } else { %>
            <p>No blogs created yet!</p>
        <% } %>
    </div>

    <script>
        // Example JavaScript functions for Edit and Delete (replace with actual implementation)
        function editPost(postId) {
            alert('Editing post with ID: ' + postId);
            // Logic to handle editing the post
        }

        function deletePost(postId) {
            if (confirm('Are you sure you want to delete this post?')) {
                alert('Deleting post with ID: ' + postId);
                // Logic to handle deleting the post
            }
        }
    </script>

</body>
</html>
